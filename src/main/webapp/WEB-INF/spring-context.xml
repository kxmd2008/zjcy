<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans   
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
        http://www.springframework.org/schema/context   
        http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-autowire="byName">


	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>/WEB-INF/zjqy.properties</value>
			</list>
		</property>
	</bean>

	<bean id="springContextAware" class="org.luis.basic.util.SpringContextAware" />

	<!-- Spring Bean Auto Scan -->
	<context:component-scan base-package="org.luis.basic" />
	<context:component-scan base-package="com.zjqy.purchaseplatform" />

	<import resource="spring-ds.xml" />
	<import resource="spring-security.xml" />
</beans>